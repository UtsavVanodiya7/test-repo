<!-- This configuration shows the minimum required and basic recommendations
     to run a crawler.  
     -->
<httpcollector id="Lexus Website Crawler">

  <!-- Decide where to store generated files. -->
  <workDir>./simple/data</workDir>

  <crawlers>
    <crawler id="Lexus Website Crawler">

      <!-- Requires at least one start URL (or urlsFile). 
           Optionally limit crawling to same protocol/domain/port as 
           start URLs. -->
      <startURLs stayOnDomain="true" stayOnPort="true" stayOnProtocol="true" async="true">
        <sitemap>https://www.lexus.com/sitemap.xml</sitemap>
        <!--<url>https://www.lexus.com/concept/LFSA</url>-->
      </startURLs>

      <!-- === Recommendations: ============================================ -->

       <maxDepth>${maxDepth|'0'}</maxDepth>
      <numThreads>${numThreads|'2'}</numThreads>
      <maxDocuments>${maxDocuments|'-1'}</maxDocuments>

      <metadataChecksummer disabled="${metadataChecksummerDisabled|'false'}" />
      <documentChecksummer disabled="${documentChecksummerDisabled|'false'}" />
      <!-- Since we rely on a curated sitemap, we treat sitemap URLs as 
         - canonical even if many pages suggests otherwise.
         -->
      <canonicalLinkDetector ignore="${canonicalLinkDetectorIgnore|'true'}" />

      <sitemapResolver ignore="true" />
      <robotsTxt ignore="true" />
      <orphansStrategy>DELETE</orphansStrategy>

	  
      <delay default="${delayDefault|'200 ms'}" scope="site">
        <schedule time="from 02:00 to 05:00">
          200 milliseconds
        </schedule>
      </delay>
      
      <!--  Relying on Sitemap only, we do not need to extract link  -->
      <linkExtractors/>
      

      <!-- Really needed now that we crawl from sitemap? -->
      <urlNormalizer class="GenericURLNormalizer">
        <normalizations>
          addWWW, 
          decodeUnreservedCharacters,
          encodeNonURICharacters, 
          encodeSpaces, 
          lowerCaseSchemeHost,
          removeDefaultPort,
          removeDuplicateSlashes,
          removeQueryString,
          secureScheme,
          upperCaseEscapeSequence
        </normalizations>
       
      </urlNormalizer>

      <!-- As of this writing, the sitemap "lastmod" tag does not contain 
         - reliable dates so we cannot rely on them.  That is why we disable
         - sitemap support here so we recrawl the URLs regardless of their
         - indicated modified date from sitemap.
         -->
      <recrawlableResolver sitemapSupport="never"/>

      <httpFetchers maxRetries="0" retryDelay="5 seconds">
        <fetcher class="GenericHttpFetcher">
          <userAgent>Lexus Motor Sales, USA (Norconex HTTP Collector)</userAgent>
          <connectionTimeout>1 minute</connectionTimeout>
		  <referenceFilters>
		<filter
			class="com.norconex.collector.core.filter.impl.ReferenceFilter">
		  <valueMatcher
			  method="regex">
			^https://www.lexus.com/sitemap.xml$
		  </valueMatcher>
		</filter>
		</referenceFilters>
		  <!-- Optional browser capabilities supported by the web driver. -->
		 
        </fetcher>
		
		<!--<fetcher class="com.norconex.collector.http.fetch.impl.webdriver.WebDriverHttpFetcher">
		  <browser>firefox</browser>
		  <driverPath>./webdrivers/geckodriver.exe</driverPath>
		  <restrictions>
			<restrictTo>
				<fieldMatcher>document.reference</fieldMatcher>
				<valueMatcher method="regex">.*dynamic.*$</valueMatcher>
			</restrictTo>
		  </restrictions>
		</fetcher>-->
		<fetcher
		class="com.norconex.collector.http.fetch.impl.webdriver.WebDriverHttpFetcher">
		<browser>chrome</browser>
		<driverPath>/usr/bin/chromedriver</driverPath>
		<referenceFilters>
		<filter
			class="com.norconex.collector.core.filter.impl.ReferenceFilter"
			onMatch="exclude">
		  <valueMatcher method="regex">
			.*\.pdf$
		  </valueMatcher>
		</filter>
		<filter
			class="com.norconex.collector.core.filter.impl.ReferenceFilter"
			onMatch="include">
		  <valueMatcher
			  method="regex">
			^https?://www.lexus.com/.*$
		  </valueMatcher>
		</filter>
		</referenceFilters>
		<!--<capabilities>
			<capability name="permissions.default.stylesheet">2</capability>
			<capability name="permissions.default.image">2</capability>
		  </capabilities>-->
		  <!--<pageLoadTimeout>
			5000
		  </pageLoadTimeout>
		  <waitForElement
			  type="tagName"
			  selector="body">
			5 seconds
		  </waitForElement>
		  <implicitlyWait>
			5000
		  </implicitlyWait>-->
		  <threadWait>
		  5000
		  </threadWait>
		   <screenshot>
              <targets>directory</targets>
              <imageFormat>png</imageFormat>
              <targetDir field="SCREENSHOT_PATH" structure="datetime">
                ./simple/data/screenshots
              </targetDir>
            </screenshot>
		</fetcher>
		
      </httpFetchers>

      
      <!-- Document importing -->
      <importer>
        <postParseHandlers>
          <!-- If your target repository does not support arbitrary fields,
               make sure you only keep the fields you need. -->
          <handler class="KeepOnlyTagger">
            <fieldMatcher method="csv">title,keywords,description,document.reference,SCREENSHOT_PATH</fieldMatcher>      
          </handler>
        </postParseHandlers>
      </importer> 
      
      <!-- Decide what to do with your files by specifying a Committer. -->
      <committers>
        <committer class="XMLFileCommitter">
          <indent>4</indent>
        </committer>
      </committers>

    </crawler>
  </crawlers>

</httpcollector>
